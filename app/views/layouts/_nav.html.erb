<header class="mb-4">
  <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
      <ul class="navbar-nav">
        <% if logged_in? %>
          <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown"><%= current_user.name %></a>
            <ul class="dropdown-menu dropdown-menu-right">
              <li class="dropdown-item"><%= link_to "Logout", logout_path, method: :delete %></li>
              <li class="dropdown-item"><%= link_to "Withdraw", withdraw_path, method: :delete, data: { confirm: "本当にアカウントを削除しますか？" } %></li>
            </ul>
          </li>
        <% else %>
          <%= link_to "Signup", signup_path, class: "nav-link" %>
          <%= link_to "Login", login_path, class: "nav-link" %>
        <% end %>
      </ul>      
    </div>
  </nav>
</header>